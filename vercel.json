{
    "version": 2,
    "public": true,
    "buildCommand": "echo 'Using static HTML - no build needed'",
    "outputDirectory": ".",
    "cleanUrls": true,
    "trailingSlash": true,
    "redirects": [
        {
            "source": "/",
            "destination": "/dashboard-web/"
        }
    ],
    "rewrites": [
        {
            "source": "/dashboard/(.*)",
            "destination": "/dashboard-web/$1"
        },
        {
            "source": "/dashboard",
            "destination": "/dashboard-web/"
        }
    ],
    "headers": [
        {
            "source": "/sw.js",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                },
                {
                    "key": "Service-Worker-Allowed",
                    "value": "/"
                }
            ]
        },
        {
            "source": "/(.*)/manifest.json",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/manifest+json"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}